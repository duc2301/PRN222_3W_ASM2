@page
@model ClubManagement.Pages.Activities.DeleteModel
@{
    ViewData["Title"] = "Delete Activity";
    var activity = Model.Activity;
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">Activities</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Activity</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this activity? This action cannot be undone.
                        @if (activity.ActivityParticipants.Any())
                        {
                            <br />
                            <text>
                            <strong>Note:</strong> This activity has @activity.ActivityParticipants.Count participants.
                            All participation records will also be deleted.
                            </text>
                        }
                    </div>

                    <h4 class="mb-3">Activity Details:</h4>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Activity Name:</dt>
                        <dd class="col-sm-9">@activity.ActivityName</dd>

                        <dt class="col-sm-3">Club:</dt>
                        <dd class="col-sm-9">@activity.Club.ClubName</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@activity.Description</dd>

                        <dt class="col-sm-3">Location:</dt>
                        <dd class="col-sm-9">@activity.Location</dd>

                        <dt class="col-sm-3">Start Date:</dt>
                        <dd class="col-sm-9">@activity.StartDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">End Date:</dt>
                        <dd class="col-sm-9">@(activity.EndDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>

                        <dt class="col-sm-3">Participants:</dt>
                        <dd class="col-sm-9">@activity.ActivityParticipants.Count</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Activity.ActivityId" />
                        <div class="d-flex justify-content-between pt-3">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete Activity
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
