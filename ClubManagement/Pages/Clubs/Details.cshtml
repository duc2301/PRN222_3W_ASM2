@page
@model ClubManagement.Pages.Clubs.DetailsModel

@{
    ViewData["Title"] = "Chi tiết CLB";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Chi tiết CLB</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Tên CLB</dt>
                        <dd class="col-sm-8">@Model.Club.ClubName</dd>
                        <dt class="col-sm-4">Mô tả</dt>
                        <dd class="col-sm-8">@Model.Club.Description</dd>
                        <dt class="col-sm-4">Ngày thành lập</dt>
                        <dd class="col-sm-8">@Model.Club.CreatedAt?.ToString("dd/MM/yyyy")</dd>
                        <dt class="col-sm-4">Chủ nhiệm</dt>
                        <dd class="col-sm-8">
                            @if (Model.Club.Leader != null)
                            {
                                <span>@Model.Club.Leader.FullName</span>
                                @if (!string.IsNullOrEmpty(Model.Club.Leader.Email))
                                {
                                    <span class="text-muted" style="font-size: 13px;">(@Model.Club.Leader.Email)</span>
                                }
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a asp-page="MyClubs" class="btn btn-outline-secondary">Quay lại</a>
                    <div>
                        <a asp-page="./Edit" asp-route-id="@Model.Club.ClubId" class="btn btn-primary me-2">Chỉnh sửa</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <form method="post"
                                  asp-page-handler="Delete"
                                  asp-route-id="@Model.Club.ClubId"
                                  class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa câu lạc bộ này? Hành động này không thể hoàn tác.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i> Xóa
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
