@page
@model ClubManagement.Pages.Payments.CreateModel
@{
    ViewData["Title"] = "Đóng phí";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-credit-card me-2"></i>Đóng phí</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FeeId" class="form-label fw-bold">
                                <i class="bi bi-receipt me-1"></i>Fee ID
                            </label>
                            <input asp-for="FeeId" class="form-control" placeholder="Nhập Fee ID" required />
                            <span asp-validation-for="FeeId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-bold">
                                <i class="bi bi-currency-dollar me-1"></i>Số tiền
                            </label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="Nhập số tiền" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Xác nhận đóng phí
                            </button>
                            <a asp-page="MyPayments" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}