@page "{id:int}"
@model ClubManagement.Pages.Fees.DetailsModel

@{
    ViewData["Title"] = "Chi tiết Phí";
    var payments = Model.Payments;




}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-info-circle me-2"></i>Chi tiết Phí</h2>
            <p class="text-muted mb-0">Thông tin chi tiết về khoản phí và danh sách thanh toán.</p>
        </div>

        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <div class="row">

        <!-- LEFT: FEE INFO -->
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Thông tin Phí</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề:</dt>
                        <dd class="col-sm-8"><strong>@Model.Fee.Title</strong></dd>

                        <dt class="col-sm-4">Câu lạc bộ:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Fee.ClubName</span>
                        </dd>

                        <dt class="col-sm-4">Số tiền:</dt>
                        <dd class="col-sm-8">
                            <span class="fw-bold text-success fs-5">@Model.Fee.Amount.ToString("N0") đ</span>
                        </dd>

                        <dt class="col-sm-4">Hạn nộp:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-calendar-event me-1"></i>
                                @Model.Fee.DueDate.ToString("dd/MM/yyyy")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">@(Model.Fee.Description ?? "Không có mô tả")</dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.Fee.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- RIGHT: PAYMENTS -->
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-people me-2"></i>Danh sách Thanh toán
                        <span class="badge bg-light text-dark ms-2">@payments.Count() thành viên</span>
                    </h5>
                </div>

                <div class="card-body">
                    @if (!payments.Any())
                    {
                        <p class="text-muted text-center py-3">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Chưa có ai đóng phí này.
                        </p>
                    }
                    else
                    {
                        var paidCount = payments.Count(p => p.Status == "Paid");
                        var pendingCount = payments.Count(p => p.Status == "Pending");
                        var unpaidCount = payments.Count(p => p.Status == "Unpaid");
                        var expiredCount = payments.Count(p => p.Status == "Expired");

                        <!-- STATUS SUMMARY -->
                        <div class="mb-3">
                            <div class="row g-2">
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-success">@paidCount</div>
                                        <small class="text-muted">Đã xác nhận</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-info">@pendingCount</div>
                                        <small class="text-muted">Chờ xác nhận</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-warning">@unpaidCount</div>
                                        <small class="text-muted">Chưa đóng</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-danger">@expiredCount</div>
                                        <small class="text-muted">Quá hạn</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- TABLE -->
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Người đóng</th>
                                        <th>Số tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày đóng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in payments.OrderByDescending(p => p.PaymentDate))
                                    {
                                        <tr>
                                            <td class="fw-bold">@payment.User?.FullName</td>
                                            <td class="fw-bold text-success">@payment.Amount.ToString("N0") đ</td>
                                            <td>
                                                @if (payment.Status == "Paid")
                                                {
                                                    <span class="badge bg-success">Đã xác nhận</span>
                                                }
                                                else if (payment.Status == "Pending")
                                                {
                                                    <span class="badge bg-info">Chờ xác nhận</span>
                                                }
                                                else if (payment.Status == "Unpaid")
                                                {
                                                    <span class="badge bg-warning text-dark">Chưa đóng</span>
                                                }
                                                else if (payment.Status == "Expired")
                                                {
                                                    <span class="badge bg-danger">Quá hạn</span>
                                                }
                                            </td>

                                            <td>
                                                @(payment.PaymentDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đóng")
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
