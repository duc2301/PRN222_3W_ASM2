@page
@model ClubManagement.Pages.JoinRequests.IndexModel
@{
    ViewData["Title"] = "Join Requests";
}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-list-ul me-2"></i>Quản Lý Yêu Cầu Tham Gia</h2>
            <p class="text-muted mb-0">Danh sách các yêu cầu tham gia câu lạc bộ</p>
        </div>
        <a asp-page="Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Tạo yêu cầu mới
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Người dùng</th>
                            <th>Câu lạc bộ</th>
                            <th>Trạng thái</th>
                            <th>Ngày yêu cầu</th>
                            <th>Ghi chú</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Requests)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@r.User?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@r.User?.Email</small>
                                    </div>
                                </td>
                                <td>
                                    <strong>@r.Club?.ClubName</strong>
                                </td>
                                <td>
                                    @if (r.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Chờ duyệt
                                        </span>
                                    }
                                    else if (r.Status == "Approved")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Đã duyệt
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Đã từ chối
                                        </span>
                                    }
                                </td>
                                <td>@r.RequestDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(r.Note))
                                    {
                                        <span>@r.Note</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có ghi chú</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (r.Status == "Pending")
                                    {
                                        @if (User.IsInRole("Admin") || User.IsInRole("ClubManager"))
                                        {
                                            <div class="btn-group" role="group">
                                                <a asp-page="Approve" asp-route-id="@r.RequestId"
                                                   class="btn btn-success btn-sm"
                                                   title="Phê duyệt">
                                                    <i class="bi bi-check-circle"></i> Duyệt
                                                </a>
                                                <a asp-page="Reject" asp-route-id="@r.RequestId"
                                                   class="btn btn-danger btn-sm"
                                                   title="Từ chối">
                                                    <i class="bi bi-x-circle"></i> Từ chối
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="bi bi-lock"></i> Không có quyền
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Đã xử lý</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Requests.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                        <p class="text-muted mt-3">Chưa có yêu cầu tham gia nào</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}