@page
@model ClubManagement.Pages.JoinRequests.RejectModel
@{
    ViewData["Title"] = "Từ Chối Yêu Cầu";
}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-danger"><i class="bi bi-x-circle me-2"></i>Từ Chối Yêu Cầu Tham Gia</h2>
            <p class="text-muted mb-0">Nhập lý do từ chối</p>
        </div>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Thông tin từ chối</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Input.RequestId" />
                        <input type="hidden" asp-for="Input.LeaderId" />

                        <div class="mb-4">
                            <label asp-for="Input.Reason" class="form-label fw-bold">Lý do từ chối</label>
                            <textarea asp-for="Input.Reason" class="form-control" rows="5"
                                      placeholder="Nhập lý do từ chối yêu cầu này..."></textarea>
                            <span asp-validation-for="Input.Reason" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Lý do từ chối sẽ được lưu lại.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-x-circle me-1"></i> Từ chối
                            </button>
                            <a asp-page="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left me-1"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>